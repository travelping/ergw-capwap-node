{erl_opts, [debug_info]}.
{deps, [
    {capwap, {git, "git://github.com/travelping/capwap", {branch, "master"}}},
    {gen_listener_tcp, {git, "git://github.com/travelping/gen_listener_tcp", {branch, "master"}}},
    {netdata, {git, "git://github.com/RoadRunnr/erl_netdata", {branch, "master"}}}
]}.

{relx, [
    {release, {'ergw-capwap-node', "1.9.1"}, [capwap, netdata, sasl, runtime_tools]},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
			    {include_erts, true},
			    {include_src, false}]}]},
	    {native, [
		      {overrides, [{override, gen_socket, [{erl_opts,[debug_info,
								      {native, false}]}]},

				   {override, capwap, [{erl_opts,[debug_info,
								   native, {hipe, o3},
								   {parse_transform, lager_transform}]}]},
				   {override, eradius, [{erl_opts,[debug_info,
								   native, {hipe, o3},
								   {parse_transform, lager_transform}]}]},
				   {override, regine, [{erl_opts,[debug_info,
								  native, {hipe, o3},
								  {parse_transform, lager_transform}]}]},
				   {override, ergw_aaa, [{erl_opts,[debug_info,
								    native, {hipe, o3},
								    {parse_transform, lager_transform}]}]},
				   {override, flower, [{erl_opts,[debug_info,
								  native, {hipe, o3},
								  {parse_transform, lager_transform}]}]},
				   {override, exometer_core, [{erl_opts,[debug_info,
									 native, {hipe, o3},
									 {parse_transform, lager_transform}]}]},
				   {override, pcapng, [{erl_opts,[debug_info,
								  native, {hipe, o3},
								  {parse_transform, lager_transform}]}]},
				   {override, meck, [{erl_opts,[debug_info,
								{platform_define, "^[0-9]+", namespaced_dicts}]}]},
					{override, jsx, [{erl_opts, [debug_info,
								  native, {hipe, o3},
								  {d, maps_always}, {d, maps_support}]}]},
				   {override, [{erl_opts, [debug_info,
							   native, {hipe, o3}]}]}]}
		     ]}
]}.
